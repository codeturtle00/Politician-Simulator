<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.politicgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning"
        android:theme="@style/BlueTheme"
        android:name=".PoliticGameApp">

        <activity android:name=".SpeechGame.SpeechInstructionActivity"></activity>
        <activity android:name=".StampGame.StampActivityWon"></activity>
        <activity android:name=".StampGame.StampActivityLost" />
        <activity android:name=".SpeechGame.FailureSpeechResult" />
        <activity android:name=".SpeechGame.SuccessSpeechResult" />
        <activity android:name=".SpeechGame.SpeechResult" />
        <activity
            android:name=".LeaderBoardActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".StampGame.StampActivity" />
        <activity android:name=".StampGame.StampInstructionActivity" />
        <activity android:name=".SpeechGame.SpeechActivity" />
        <activity android:name=".BabyGame.BabyActivity" />
        <activity android:name=".ui.Login.LoginActivity" />
        <activity android:name=".RegistrationActivity" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PauseActivity" />
        <activity android:name=".SettingsActivity" />
    </application>

</manifest>